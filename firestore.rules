rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Default to deny all. Enterprise security principle: allowlist only.
    match /{document=**} {
      allow read, write: if false;
    }
    
    // TODO: Define granular rules for collections
    // Example:
    // match /users/{userId} {
    //   allow read, write: if request.auth != null && request.auth.uid == userId;
    // }
  }
}
